<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#455A64"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_add_basket"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#757575"
        android:fontFamily="@font/ustrokeregular"
        android:gravity="center"
        android:text="ADD BASKET"
        android:textSize="15sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/single_basket"
        android:layout_below="@id/button_add_basket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="35dp" />

    <Button
        android:id="@+id/button_remove_all_baskets"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/single_basket"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:backgroundTint="#757575"
        android:fontFamily="@font/ustrokeregular"
        android:gravity="center"
        android:text="REMOVE ALL BASKETS"
        android:textSize="15sp" />

</RelativeLayout>